@inject NavigationManager Nav

@code {
    [CascadingParameter] private HttpContext? HttpContext { get; set; }

    protected override void OnInitialized()
    {
        // Capturar la ruta real desde el request del servidor
        var returnUrl = HttpContext?.Request.Path.Value ?? Nav.ToAbsoluteUri(Nav.Uri).PathAndQuery;

        // Solo redirigir si no estamos ya en login
        if (!returnUrl.StartsWith("/login", StringComparison.OrdinalIgnoreCase))
        {
            var encodedReturnUrl = Uri.EscapeDataString(returnUrl);
            Nav.NavigateTo($"/login?returnUrl={encodedReturnUrl}", forceLoad: true);
        }
        else
        {
            Nav.NavigateTo("/login", forceLoad: true);
        }
    }
}