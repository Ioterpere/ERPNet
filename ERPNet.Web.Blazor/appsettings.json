{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "BffSettings": {
    "ApiBaseUrl": "https://localhost:7268",
    "CookieName": "__Host-erpnet",
    "TokenRefreshBufferMinutes": 2
  },
  "ReverseProxy": {
    "Routes": {
      "route-usuarios": { "ClusterId": "erpnet-api", "Match": { "Path": "/api/usuarios/{**catch-all}" } },
      "route-empleados": { "ClusterId": "erpnet-api", "Match": { "Path": "/api/empleados/{**catch-all}" } },
      "route-maquinas": { "ClusterId": "erpnet-api", "Match": { "Path": "/api/maquinas/{**catch-all}" } },
      "route-roles": { "ClusterId": "erpnet-api", "Match": { "Path": "/api/roles/{**catch-all}" } },
      "route-menus": { "ClusterId": "erpnet-api", "Match": { "Path": "/api/menus/{**catch-all}" } },
      "route-archivos": { "ClusterId": "erpnet-api", "Match": { "Path": "/api/archivos/{**catch-all}" } },
      "route-logs": { "ClusterId": "erpnet-api", "Match": { "Path": "/api/logs/{**catch-all}" } }
    },
    "Clusters": {
      "erpnet-api": {
        "Destinations": {
          "primary": { "Address": "https://localhost:7268" }
        }
      }
    }
  }
}
