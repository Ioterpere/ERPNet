@page "/usuarios"
@attribute [Authorize]
@using ERPNet.ApiClient

@inject IUsuariosClient UsuariosClient
@inject IEmpleadosClient EmpleadosClient
@inject IRolesClient RolesClient
@inject NavigationManager Nav
@inject ToastService Toast

<PageTitle>Usuarios — ERPNet</PageTitle>

<div class="row g-0 panel-container">

    <!-- ── Panel izquierdo: Lista ─────────────────────────────── -->
    <div class="col-12 col-lg-4 border-end panel-lista @((!_esNuevo && !Id.HasValue) ? "d-flex" : "d-none d-lg-flex")">

        <!-- Header -->
        <div class="d-flex align-items-center justify-content-between px-3 py-2 border-bottom flex-shrink-0">
            <h5 class="mb-0 fw-semibold">Usuarios</h5>
            <button class="btn btn-sm btn-primary" @onclick="NuevoUsuario">
                <i class="bi bi-plus-lg me-1"></i>Nuevo
            </button>
        </div>

        <!-- Buscador -->
        <div class="px-3 py-2 border-bottom flex-shrink-0">
            <div class="input-group input-group-sm">
                <span class="input-group-text bg-transparent border-end-0">
                    <i class="bi bi-search text-muted"></i>
                </span>
                <input type="search" class="form-control border-start-0 ps-0"
                       placeholder="Buscar por email..."
                       @bind-value="_busqueda" @bind-value:event="oninput" />
            </div>
        </div>

        <!-- Items -->
        <div class="flex-grow-1 overflow-y-auto">
            @if (_cargandoLista)
            {
                @for (var i = 0; i < 5; i++)
                {
                    <div class="user-row d-flex align-items-center gap-3 placeholder-glow">
                        <span class="user-avatar placeholder flex-shrink-0"></span>
                        <div class="flex-grow-1">
                            <span class="placeholder col-7 d-block mb-1" style="height:13px"></span>
                            <span class="placeholder col-5" style="height:11px"></span>
                        </div>
                    </div>
                }
            }
            else if (_usuariosFiltrados.Count == 0)
            {
                <div class="text-center text-muted py-5 small">
                    <i class="bi bi-person-x fs-3 d-block mb-2"></i>
                    Sin resultados
                </div>
            }
            else
            {
                @foreach (var u in _usuariosFiltrados)
                {
                    <button type="button"
                            class="user-row w-100 d-flex align-items-center gap-3 @(Id == u.Id ? "active" : "")"
                            @onclick="() => SeleccionarUsuario(u.Id)">
                        <div class="user-avatar flex-shrink-0">
                            @(u.Email.Length > 0 ? char.ToUpper(u.Email[0]).ToString() : "?")
                        </div>
                        <div class="flex-grow-1 text-start overflow-hidden">
                            <div class="fw-semibold text-truncate small">@u.Email</div>
                            <div class="d-flex align-items-center gap-2 mt-1">
                                <span class="badge rounded-pill @(u.Activo ? "bg-success-subtle text-success-emphasis" : "bg-secondary-subtle text-secondary-emphasis")"
                                      style="font-size:.7rem">
                                    @(u.Activo ? "Activo" : "Inactivo")
                                </span>
                                @if (_empleadosPorId.TryGetValue(u.EmpleadoId, out var emp))
                                {
                                    <span class="text-muted text-truncate" style="font-size:.75rem">@emp.Nombre @emp.Apellidos</span>
                                }
                            </div>
                        </div>
                    </button>
                }
            }
        </div>

        <!-- Paginación -->
        @if (_paginado is not null && !_cargandoLista)
        {
            <div class="px-3 py-2 border-top d-flex align-items-center justify-content-between flex-shrink-0 small text-muted">
                <span>@PaginacionTexto</span>
                <div class="btn-group btn-group-sm">
                    <button class="btn btn-outline-secondary" @onclick="PaginaAnterior"
                            disabled="@(_pagina <= 1)">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <button class="btn btn-outline-secondary" @onclick="PaginaSiguiente"
                            disabled="@(_pagina >= _paginado.TotalPaginas)">
                        <i class="bi bi-chevron-right"></i>
                    </button>
                </div>
            </div>
        }
    </div>

    <!-- ── Panel derecho: Detalle / Formulario ────────────────── -->
    <div class="col-12 col-lg-8 panel-detalle">

        @if (!_esNuevo && !Id.HasValue)
        {
            <!-- Estado vacío -->
            <div class="panel-placeholder">
                <i class="bi bi-person-circle text-muted" style="font-size:3rem"></i>
                <p class="text-muted mt-3 mb-1">Selecciona un usuario de la lista</p>
                <p class="text-muted small mb-0">o crea uno nuevo con el botón "+ Nuevo"</p>
            </div>
        }
        else if (_esNuevo)
        {
            <!-- Formulario de creación -->
            <div class="px-4 py-4">
                <div class="d-flex align-items-center gap-3 mb-4">
                    <button class="btn btn-sm btn-light d-lg-none" @onclick="VolverALista">
                        <i class="bi bi-arrow-left"></i>
                    </button>
                    <h5 class="mb-0 fw-semibold">Nuevo usuario</h5>
                </div>

                @if (_errorCrear is not null)
                {
                    <div class="alert alert-danger d-flex align-items-center gap-2 mb-4">
                        <i class="bi bi-x-circle-fill flex-shrink-0"></i>
                        <span>@_errorCrear</span>
                    </div>
                }

                <div class="card mb-3">
                    <div class="card-header d-flex align-items-center gap-2">
                        <i class="bi bi-person-plus text-primary"></i>
                        <span class="fw-semibold">Datos de cuenta</span>
                    </div>
                    <div class="card-body py-4">
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <label class="form-label">Email <span class="text-danger">*</span></label>
                                <input type="email" class="form-control" @bind="_nuevoEmail"
                                       placeholder="usuario@empresa.com" autocomplete="off" />
                            </div>
                            <div class="col-sm-6">
                                <label class="form-label">Empleado <span class="text-danger">*</span></label>
                                <ItemSelector TItem="EmpleadoResponse"
                                                 SearchAsync="BuscarEmpleadosAsync"
                                                 GetId="e => e.Id"
                                                 GetLabel='e => $"{e.Nombre} {e.Apellidos}"'
                                                 GetSubLabel="e => e.Dni"
                                                 Value="_nuevoEmpleadoId"
                                                 ValueChanged="id => _nuevoEmpleadoId = id"
                                                 Placeholder="Buscar por nombre o DNI..." />
                            </div>
                            <div class="col-12">
                                <p class="text-muted small mb-0">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Se generará una contraseña temporal y se enviará al usuario por email. Deberá cambiarla en su primer acceso.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center gap-2">
                        <i class="bi bi-shield-person text-primary"></i>
                        <span class="fw-semibold">Roles iniciales</span>
                    </div>
                    <div class="card-body py-3">
                        @if (_todosRoles.Count == 0)
                        {
                            <p class="text-muted small mb-0">No hay roles disponibles.</p>
                        }
                        else
                        {
                            <div class="row g-2">
                                @foreach (var rol in _todosRoles)
                                {
                                    <div class="col-sm-6 col-lg-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="nuevo-rol-@rol.Id"
                                                   checked="@_rolesNuevo.Contains(rol.Id)"
                                                   @onchange="e => ToggleRolNuevo(rol.Id, (bool)e.Value!)" />
                                            <label class="form-check-label" for="nuevo-rol-@rol.Id">
                                                <span class="fw-semibold small">@rol.Nombre</span>
                                                @if (!string.IsNullOrWhiteSpace(rol.Descripcion))
                                                {
                                                    <span class="d-block text-muted" style="font-size:.75rem">@rol.Descripcion</span>
                                                }
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-primary px-4" @onclick="CrearUsuarioAsync" disabled="@_creando">
                        @if (_creando)
                        {
                            <span class="spinner-border spinner-border-sm me-2" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-person-check me-2"></i>
                        }
                        Crear usuario
                    </button>
                    <button class="btn btn-outline-secondary" @onclick="VolverALista">Cancelar</button>
                </div>
            </div>
        }
        else if (Id.HasValue)
        {
            <!-- Formulario de edición -->
            <div class="px-4 py-4">

                <!-- Header de detalle -->
                <div class="d-flex align-items-center gap-3 mb-4">
                    <button class="btn btn-sm btn-light d-lg-none" @onclick="VolverALista">
                        <i class="bi bi-arrow-left"></i>
                    </button>

                    @if (_cargandoDetalle)
                    {
                        <div class="d-flex align-items-center gap-3 placeholder-glow flex-grow-1">
                            <span class="placeholder rounded-circle flex-shrink-0" style="width:48px;height:48px"></span>
                            <div>
                                <span class="placeholder d-block mb-1" style="height:14px;width:160px"></span>
                                <span class="placeholder" style="height:11px;width:120px"></span>
                            </div>
                        </div>
                    }
                    else if (_usuarioDetalle is not null)
                    {
                        <div class="user-avatar-lg flex-shrink-0">
                            @(_usuarioDetalle.Email.Length > 0 ? char.ToUpper(_usuarioDetalle.Email[0]).ToString() : "?")
                        </div>
                        <div class="flex-grow-1 overflow-hidden">
                            <h5 class="mb-0 fw-semibold text-truncate">
                                @if (_empleadoDetalle is not null)
                                {
                                    @($"{_empleadoDetalle.Nombre} {_empleadoDetalle.Apellidos}")
                                }
                                else
                                {
                                    <span>Usuario #@_usuarioDetalle.Id</span>
                                }
                            </h5>
                            <p class="text-muted small mb-0 text-truncate">@_usuarioDetalle.Email</p>
                        </div>
                        <span class="badge rounded-pill flex-shrink-0 @(_usuarioDetalle.Activo ? "bg-success-subtle text-success-emphasis" : "bg-secondary-subtle text-secondary-emphasis")">
                            @(_usuarioDetalle.Activo ? "Activo" : "Inactivo")
                        </span>
                    }
                </div>

                @if (_errorDetalle is not null)
                {
                    <div class="alert alert-danger d-flex align-items-center gap-2 mb-4">
                        <i class="bi bi-exclamation-triangle-fill flex-shrink-0"></i>
                        <span>@_errorDetalle</span>
                    </div>
                }

                @if (!_cargandoDetalle && _usuarioDetalle is not null)
                {
                    <!-- Card datos de cuenta -->
                    <div class="card mb-3">
                        <div class="card-header d-flex align-items-center gap-2">
                            <i class="bi bi-person-circle text-primary"></i>
                            <span class="fw-semibold">Datos de cuenta</span>
                        </div>
                        <div class="card-body py-4">
                            @if (_errorDatos is not null)
                            {
                                <div class="alert alert-danger d-flex align-items-center gap-2 mb-3 py-2">
                                    <i class="bi bi-x-circle-fill flex-shrink-0"></i>
                                    <span>@_errorDatos</span>
                                </div>
                            }
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" @bind="_editEmail" />
                                </div>
                                <div class="col-sm-6">
                                    <label class="form-label">Caducidad de contraseña</label>
                                    <input type="date" class="form-control" @bind="_editCaducidadDate" />
                                </div>
                                <div class="col-12">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="activo-switch" @bind="_editActivo" />
                                        <label class="form-check-label" for="activo-switch">Usuario activo</label>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-primary btn-sm px-3" @onclick="GuardarDatosAsync"
                                        disabled="@_guardandoDatos">
                                    @if (_guardandoDatos)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" aria-hidden="true"></span>
                                    }
                                    Guardar cambios
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Card roles -->
                    <div class="card mb-3">
                        <div class="card-header d-flex align-items-center gap-2">
                            <i class="bi bi-shield-person text-primary"></i>
                            <span class="fw-semibold">Roles asignados</span>
                        </div>
                        <div class="card-body py-3">
                            @if (_errorRoles is not null)
                            {
                                <div class="alert alert-danger d-flex align-items-center gap-2 mb-3 py-2">
                                    <i class="bi bi-x-circle-fill flex-shrink-0"></i>
                                    <span>@_errorRoles</span>
                                </div>
                            }
                            @if (_todosRoles.Count == 0)
                            {
                                <p class="text-muted small mb-0">No hay roles disponibles.</p>
                            }
                            else
                            {
                                <div class="row g-2 mb-3">
                                    @foreach (var rol in _todosRoles)
                                    {
                                        <div class="col-sm-6 col-lg-4">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="rol-@rol.Id"
                                                       checked="@_rolesUsuario.Contains(rol.Id)"
                                                       @onchange="e => ToggleRol(rol.Id, (bool)e.Value!)" />
                                                <label class="form-check-label" for="rol-@rol.Id">
                                                    <span class="fw-semibold small">@rol.Nombre</span>
                                                    @if (!string.IsNullOrWhiteSpace(rol.Descripcion))
                                                    {
                                                        <span class="d-block text-muted" style="font-size:.75rem">@rol.Descripcion</span>
                                                    }
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <button class="btn btn-primary btn-sm px-3" @onclick="GuardarRolesAsync"
                                        disabled="@_guardandoRoles">
                                    @if (_guardandoRoles)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" aria-hidden="true"></span>
                                    }
                                    Guardar roles
                                </button>
                            }
                        </div>
                    </div>

                    <!-- Card seguridad / reset contraseña -->
                    <div class="card mb-3">
                        <div class="card-header d-flex align-items-center gap-2">
                            <i class="bi bi-shield-lock-fill text-primary"></i>
                            <span class="fw-semibold">Seguridad</span>
                        </div>
                        <div class="card-body py-4">
                            @if (_errorReset is not null)
                            {
                                <div class="alert alert-danger d-flex align-items-center gap-2 mb-3 py-2">
                                    <i class="bi bi-x-circle-fill flex-shrink-0"></i>
                                    <span>@_errorReset</span>
                                </div>
                            }
                            <p class="text-muted small mb-3">
                                Genera una contraseña temporal aleatoria y la envía por email al usuario. El usuario deberá cambiarla en su próximo acceso.
                            </p>
                            <button class="btn btn-warning btn-sm px-3" @onclick="ResetearContrasenaAsync"
                                    disabled="@_reseteandoContrasena">
                                @if (_reseteandoContrasena)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" aria-hidden="true"></span>
                                }
                                else
                                {
                                    <i class="bi bi-key me-2"></i>
                                }
                                Resetear contraseña
                            </button>
                        </div>
                    </div>

                    <!-- Card eliminar usuario -->
                    <div class="card mb-4 border-danger-subtle">
                        <div class="card-header d-flex align-items-center gap-2">
                            <i class="bi bi-person-x-fill text-danger"></i>
                            <span class="fw-semibold text-danger">Eliminar usuario</span>
                        </div>
                        <div class="card-body py-4">
                            <p class="text-muted small mb-3">
                                Elimina permanentemente este usuario del sistema. Los datos asociados al empleado no se verán afectados.
                            </p>
                            <button class="btn btn-danger btn-sm px-3"
                                    @onclick='() => _mostrarModalEliminar = true'>
                                <i class="bi bi-trash3 me-2"></i>Eliminar usuario
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<!-- Modal: confirmar eliminación de usuario -->
<Modal Title="Eliminar usuario" @bind-IsVisible="_mostrarModalEliminar">
    <ChildContent>
        <p class="mb-1">¿Seguro que quieres eliminar el usuario <strong>@_usuarioDetalle?.Email</strong>?</p>
        <p class="text-muted small mb-0">Esta acción no se puede deshacer.</p>
        @if (_errorEliminar is not null)
        {
            <div class="alert alert-danger d-flex align-items-center gap-2 mt-3 py-2 mb-0">
                <i class="bi bi-x-circle-fill flex-shrink-0"></i>
                <span>@_errorEliminar</span>
            </div>
        }
    </ChildContent>
    <Footer>
        <button class="btn btn-outline-secondary"
                @onclick='() => _mostrarModalEliminar = false'>Cancelar</button>
        <button class="btn btn-danger" @onclick="EliminarUsuarioAsync" disabled="@_eliminando">
            @if (_eliminando)
            {
                <span class="spinner-border spinner-border-sm me-2" aria-hidden="true"></span>
            }
            Eliminar
        </button>
    </Footer>
</Modal>

@code {
    [SupplyParameterFromQuery(Name = "id")]
    public int? Id { get; set; }

    // ── Lista ──────────────────────────────────────────────────
    private ListaPaginadaOfUsuarioResponse? _paginado;
    private List<UsuarioResponse> _usuarios = [];
    private Dictionary<int, EmpleadoResponse> _empleadosPorId = [];
    private bool _cargandoLista = true;
    private string _busqueda = string.Empty;
    private int _pagina = 1;
    private const int PorPagina = 15;

    // ── Roles (todos) ──────────────────────────────────────────
    private List<RolResponse> _todosRoles = [];

    // ── Estado de selección ────────────────────────────────────
    private bool _esNuevo;
    private int? _idActual; // para detectar cambios de Id en OnParametersSetAsync

    // ── Detalle ────────────────────────────────────────────────
    private UsuarioResponse? _usuarioDetalle;
    private EmpleadoResponse? _empleadoDetalle;
    private HashSet<int> _rolesUsuario = [];
    private bool _cargandoDetalle;
    private string? _errorDetalle;

    // ── Formulario edición ─────────────────────────────────────
    private string _editEmail = string.Empty;
    private bool _editActivo;
    private DateTime? _editCaducidadDate;
    private bool _guardandoDatos;
    private string? _errorDatos;

    // ── Roles edición ──────────────────────────────────────────
    private bool _guardandoRoles;
    private string? _errorRoles;

    // ── Reset contraseña ───────────────────────────────────────
    private bool _reseteandoContrasena;
    private string? _errorReset;

    // ── Eliminar usuario ───────────────────────────────────────
    private bool _mostrarModalEliminar;
    private bool _eliminando;
    private string? _errorEliminar;

    // ── Formulario creación ────────────────────────────────────
    private string _nuevoEmail = string.Empty;
    private int? _nuevoEmpleadoId;
    private HashSet<int> _rolesNuevo = [];
    private bool _creando;
    private string? _errorCrear;

    // ── Computed ───────────────────────────────────────────────
    private List<UsuarioResponse> _usuariosFiltrados =>
        string.IsNullOrWhiteSpace(_busqueda)
            ? _usuarios
            : _usuarios.Where(u => u.Email.Contains(_busqueda, StringComparison.OrdinalIgnoreCase)).ToList();

    private string PaginacionTexto
    {
        get
        {
            if (_paginado is null) return string.Empty;
            var desde = (_pagina - 1) * PorPagina + 1;
            var hasta = Math.Min(_pagina * PorPagina, _paginado.TotalRegistros);
            return $"{desde}–{hasta} de {_paginado.TotalRegistros}";
        }
    }

    // ── Ciclo de vida ──────────────────────────────────────────
    protected override async Task OnInitializedAsync()
    {
        await Task.WhenAll(CargarListaAsync(), CargarTodosRolesAsync());
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Id == _idActual) return;

        _idActual = Id;

        if (Id.HasValue)
        {
            _esNuevo = false;
            await CargarDetalleAsync(Id.Value);
        }
        else
        {
            LimpiarDetalle();
        }
    }

    // ── Carga de datos ─────────────────────────────────────────
    private async Task CargarListaAsync()
    {
        _cargandoLista = true;
        try
        {
            _paginado = await UsuariosClient.UsuariosGETAsync(_pagina, PorPagina);
            _usuarios = _paginado.Items.ToList();

            var ids = _usuarios.Select(u => u.EmpleadoId).Distinct().ToList();
            var empleados = await Task.WhenAll(ids.Select(async id =>
            {
                try { return await EmpleadosClient.EmpleadosGET2Async(id); }
                catch { return null; }
            }));
            _empleadosPorId = empleados.OfType<EmpleadoResponse>().ToDictionary(e => e.Id);
        }
        catch { /* lista queda vacía */ }
        finally
        {
            _cargandoLista = false;
        }
    }

    private async Task<IEnumerable<EmpleadoResponse>> BuscarEmpleadosAsync(string query, CancellationToken ct)
    {
        var resultado = await EmpleadosClient.EmpleadosGETAsync(1, 100, ct);
        return resultado.Items.Where(e =>
            TextHelper.ContieneBusqueda($"{e.Nombre} {e.Apellidos}", query) ||
            TextHelper.ContieneBusqueda(e.Dni, query));
    }

    private async Task CargarTodosRolesAsync()
    {
        try
        {
            var resultado = await RolesClient.RolesGETAsync(1, 200);
            _todosRoles = resultado.Items.ToList();
        }
        catch { /* sin roles disponibles */ }
    }

    private async Task CargarDetalleAsync(int id)
    {
        _cargandoDetalle = true;
        _errorDetalle = null;
        LimpiarFeedbackDetalle();

        try
        {
            var usuarioTask = UsuariosClient.UsuariosGET2Async(id);
            var rolesTask = UsuariosClient.RolesAll2Async(id);
            await Task.WhenAll(usuarioTask, rolesTask);

            _usuarioDetalle = await usuarioTask;
            _rolesUsuario = (await rolesTask).ToHashSet();

            _empleadoDetalle = await EmpleadosClient.EmpleadosGET2Async(_usuarioDetalle.EmpleadoId);

            // Poblar formulario
            _editEmail = _usuarioDetalle.Email;
            _editActivo = _usuarioDetalle.Activo;
            _editCaducidadDate = _usuarioDetalle.CaducidadContrasena?.LocalDateTime;
        }
        catch (ApiException ex) when (ex.StatusCode == 404)
        {
            _errorDetalle = "Usuario no encontrado.";
        }
        catch
        {
            _errorDetalle = "No se pudo cargar la información del usuario.";
        }
        finally
        {
            _cargandoDetalle = false;
        }
    }

    // ── Helpers ────────────────────────────────────────────────
    private void LimpiarDetalle()
    {
        _usuarioDetalle = null;
        _empleadoDetalle = null;
        _rolesUsuario.Clear();
        LimpiarFeedbackDetalle();
    }

    private void LimpiarFeedbackDetalle()
    {
        _errorDatos = null;
        _errorRoles = null;
        _errorReset = null;
