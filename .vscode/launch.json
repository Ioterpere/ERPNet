{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ERPNet API + MailHog",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "start-services",
      "postDebugTask": "stop-services",
      "program": "${workspaceFolder}/ERPNet.Api/bin/Debug/net10.0/ERPNet.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/ERPNet.Api",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "console": "internalConsole",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on:",
        "uriFormat": "http://localhost:5211/scalar/v1"
      }
    }
  ]
}
